@page
@model GrKouk.WebRazor.Pages.CommonEntities.CostCentres.IndexModel

@{
    ViewData["Title"] = "Cost Centres Index";
}

<h4>Cost Centres Index</h4>

<p>
    <a asp-page="Create">Create New</a>
</p>
<div class="">
    <table class="table table-bordered table-sm">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CostCentre[0].Code)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CostCentre[0].Name)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CostCentre)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Code)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
