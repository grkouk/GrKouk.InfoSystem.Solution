@page
@model GrKouk.WebRazor.Pages.CommonEntities.CostCentres.IndexModel

@{
    ViewData["Title"] = "Cost Centres Index";
}

<h4>Cost Centres Index</h4>

<p>
    <small>
        <a asp-page="Create">Create New</a>
    </small>
</p>
<div class="">
    <table class="table table-bordered table-sm">
        <thead class="thead-light">
            <tr>
                <th class="small">
                    @Html.DisplayNameFor(model => model.CostCentre[0].Code)
                </th>
                <th class="small">
                    @Html.DisplayNameFor(model => model.CostCentre[0].Name)
                </th>
                <th class="small"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CostCentre)
            {
                <tr>
                    <td class="small">
                        @Html.DisplayFor(modelItem => item.Code)
                    </td>
                    <td class="small">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td class="small">
                        <a asp-page="./Edit" asp-route-id="@item.Id"><i class="fas fa-edit"></i></a> |
                        <a asp-page="./Details" asp-route-id="@item.Id"><i class="fas fa-info-circle"></i></a> |
                        <a asp-page="./Delete" asp-route-id="@item.Id"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
