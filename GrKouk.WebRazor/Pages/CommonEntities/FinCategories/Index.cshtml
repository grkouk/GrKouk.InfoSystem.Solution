@page
@model GrKouk.WebRazor.Pages.CommonEntities.FinCategories.IndexModel

@{
    ViewData["Title"] = "Financial Categories Index";
}

<h2>Financial Categories Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table table-bordered table-sm">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FinTransCategory[0].Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FinTransCategory[0].Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.FinTransCategory) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
