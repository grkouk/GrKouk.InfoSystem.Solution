@page
@model GrKouk.WebRazor.Pages.Materials.IndexModel

@{
    ViewData["Title"] = "Materials List";
}

<h4>Materials List</h4>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form class="form-inline" asp-page="./Index" method="get">

    <p>
        Find by name:
        <input class="form-control-sm" type="text" name="SearchString" value="@Model.CurrentFilter" />
        <select name="MaterialNatureFilter" asp-for="CurrentMaterialNature" class="form-control-sm" asp-items="ViewBag.MaterialNatureValues"></select>
        <input type="submit" value="Refresh" class="btn btn-light" /> |
        Page Size:
        <select asp-for="PageSize" onchange="this.form.submit()">
            <option value="3">3</option>
            <option value="5">5</option>
            <option value="10">10</option>
            <option value="20">20</option>
            <option value="100">100</option>
        </select>
        |
        <a asp-page="./Index"
           asp-route-sortOrder="@Model.CurrentSort"
           asp-route-pageIndex="@(Model.ListItems.CurrentPage )"
           asp-route-searchFilter="@Model.CurrentFilter"
           asp-route-materialNatureFilter="0"
           asp-route-PageSize="@Model.PageSize">Back to full List</a>

    </p>

</form>
<table class="table table-bordered table-sm">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ListItems[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListItems[0].Code)
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.NameSort"
                   asp-route-searchFilter="@Model.CurrentFilter"
                   asp-route-materialNatureFilter="@Model.CurrentMaterialNature"
                   asp-route-PageSize="@Model.PageSize">
                    @Html.DisplayNameFor(model => model.ListItems[0].Name)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListItems[0].MaterialCateroryName)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.ListItems[0].MaterialTypeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListItems[0].MaterialNatureName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListItems[0].FpaDefName)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.ListItems[0].Active)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ListItems)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaterialCateroryName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.MaterialTypeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaterialNatureName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FpaDefName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Active)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id"><i class="fas fa-edit"></i></a> |
                    <a asp-page="./Details" asp-route-id="@item.Id"><i class="fas fa-info-circle"></i></a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

@{
    var prevDisabled = !Model.ListItems.HasPrevious ? "disabled" : "";
    var nextDisabled = !Model.ListItems.HasNext ? "disabled" : "";
}

<form class="form-inline" method="get">

    <a asp-page="./Index"
       asp-route-sortOrder="@Model.CurrentSort"
       asp-route-pageIndex="@(Model.ListItems.CurrentPage - 1)"
       asp-route-searchFilter="@Model.CurrentFilter"
       asp-route-materialNatureFilter="@Model.CurrentMaterialNature"
       asp-route-PageSize="@Model.PageSize"
       class="btn btn-light @prevDisabled">
        <
    </a>
    Page:@Model.ListItems.CurrentPage of @Model.ListItems.TotalPages Total Items @Model.ListItems.TotalCount
    <a asp-page="./Index"
       asp-route-sortOrder="@Model.CurrentSort"
       asp-route-pageIndex="@(Model.ListItems.CurrentPage + 1)"
       asp-route-searchFilter="@Model.CurrentFilter"
       asp-route-materialNatureFilter="@Model.CurrentMaterialNature"
       asp-route-PageSize="@Model.PageSize"
       class="btn btn-light @nextDisabled">
        >
    </a>

</form>
