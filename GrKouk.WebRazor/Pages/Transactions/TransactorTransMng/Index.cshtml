@page
@model GrKouk.WebRazor.Pages.Transactions.TransactorTransMng.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Transactor Transactions Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>


<form class="form-inline" asp-page="./Index" method="get">

    <p>
        <small> Find by name:</small>
        <input class="form-control form-control-sm" type="text" name="SearchString" value="@Model.CurrentFilter" />
        <input type="submit" value="Refresh" class="btn btn-light btn-sm" /> |
        <select name="DatePeriodFilter" asp-for="CurrentDatePeriod" class="form-control form-control-sm" asp-items="ViewBag.DataFilterValues"></select>
        <small>
            Page Size:
        </small>
        <select asp-for="PageSize" onchange="this.form.submit()" class="form-control form-control-sm">
            <option value="3">3</option>
            <option value="5">5</option>
            <option value="10">10</option>
            <option value="20">20</option>
            <option value="100">100</option>
        </select>
        |
        <a asp-page="./Index" class="small"
           asp-route-sortOrder="@Model.CurrentSort"
           asp-route-pageIndex="@(Model.ListItems.CurrentPage )"
           asp-route-searchFilter="@Model.CurrentFilter"
           asp-route-datePeriodFilter="CURMONTH"
           asp-route-PageSize="@Model.PageSize">Back to full List</a>

    </p>

</form>
<table class="table table-bordered table-sm">
    <thead class="thead-light">
        <tr>
           <th class="small">
                <a asp-page="./Index" asp-route-sortOrder="@Model.DateSort"
                   asp-route-searchFilter="@Model.CurrentFilter"
                   asp-route-datePeriodFilter="@Model.CurrentDatePeriod"
                   asp-route-PageSize="@Model.PageSize">
                    @Html.DisplayNameFor(model => model.ListItems[0].TransDate)

                </a>
                <i class="@Model.DateSortIcon"></i>
            </th>

           <th class="small">
                @Html.DisplayNameFor(model => model.ListItems[0].TransTransactorDocSeriesCode)
            </th>
           <th class="small">
                @Html.DisplayNameFor(model => model.ListItems[0].SectionCode)
            </th>
           <th class="small">
                @Html.DisplayNameFor(model => model.ListItems[0].TransRefCode)
            </th>

           <th class="small">
                <a asp-page="./Index" asp-route-sortOrder="@Model.NameSort"
                   asp-route-searchFilter="@Model.CurrentFilter"
                   asp-route-datePeriodFilter="@Model.CurrentDatePeriod"
                   asp-route-PageSize="@Model.PageSize">
                    @Html.DisplayNameFor(model => model.ListItems[0].TransactorName)
                </a>

                <i class="@Model.NameSortIcon"></i>
            </th>

           <th class="small">
                @Html.DisplayNameFor(model => model.ListItems[0].DebitAmount)
            </th>
           <th class="small">
                @Html.DisplayNameFor(model => model.ListItems[0].CreditAmount)
            </th>

           <th class="small">
                @Html.DisplayNameFor(model => model.ListItems[0].CompanyCode)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ListItems)
        {
            <tr>
                <td class="text-right">
                    @Html.DisplayFor(modelItem => item.TransDate)
                </td>
              <td class="small">
                    @Html.DisplayFor(modelItem => item.TransTransactorDocSeriesCode)
                </td>
              <td class="small">
                    @Html.DisplayFor(modelItem => item.SectionCode)
                </td>
              <td class="small">
                    @Html.DisplayFor(modelItem => item.TransRefCode)
                </td>
              <td class="small">
                    @Html.DisplayFor(modelItem => item.TransactorName)
                </td>
                <td class="text-right">
                    @Html.DisplayFor(modelItem => item.DebitAmount)
                </td>
                <td class="text-right">
                    @Html.DisplayFor(modelItem => item.CreditAmount)
                </td>



              <td class="small">
                    @Html.DisplayFor(modelItem => item.CompanyCode)
                </td>

              <td class="small">
                    <a asp-page="./Edit" asp-route-id="@item.Id"><i class="fas fa-edit"></i></a> |
                    <a asp-page="./Details" asp-route-id="@item.Id"><i class="fas fa-info-circle"></i></a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

@{
    var prevDisabled = !Model.ListItems.HasPrevious ? "disabled" : "";
    var nextDisabled = !Model.ListItems.HasNext ? "disabled" : "";
}

<form class="form-inline" method="get">

    <a asp-page="./Index"
       asp-route-sortOrder="@Model.CurrentSort"
       asp-route-pageIndex="@(Model.ListItems.CurrentPage - 1)"
       asp-route-searchFilter="@Model.CurrentFilter"
       asp-route-datePeriodFilter="@Model.CurrentDatePeriod"
       asp-route-PageSize="@Model.PageSize"
       class="btn btn-light @prevDisabled">
        <
    </a>
    <small>
      
    Page:@Model.ListItems.CurrentPage of @Model.ListItems.TotalPages Total Items @Model.ListItems.TotalCount </small>
    <a asp-page="./Index"
       asp-route-sortOrder="@Model.CurrentSort"
       asp-route-pageIndex="@(Model.ListItems.CurrentPage + 1)"
       asp-route-searchFilter="@Model.CurrentFilter"
       asp-route-datePeriodFilter="@Model.CurrentDatePeriod"
       asp-route-PageSize="@Model.PageSize"
       class="btn btn-light @nextDisabled">
        >
    </a>

</form>

