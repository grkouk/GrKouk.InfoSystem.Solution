@page
@model GrKouk.WebRazor.Pages.Transactions.BuyMaterialsDoc.IndexModel

@{
    ViewData["Title"] = "Αγορές Υλικών";
}

<h2>Λίστα Αγορές Υλικών</h2>

<p>
    <a asp-page="Create" asp-route-sortOrder="@Model.CurrentSort"
       asp-route-pageIndex="@(Model.ListItems.CurrentPage )"
       asp-route-searchFilter="@Model.CurrentFilter"
       asp-route-PageSize="@Model.PageSize">Create New</a>
</p>
<form class="form-inline" asp-page="./Index" method="get">

    <p>
        <small>
            Find by name:
        </small>
        <input class="form-control form-control-sm small" type="text" name="SearchString" value="@Model.CurrentFilter" />
        <input type="submit" value="Refresh" class="btn btn-light btn-sm" /> |
        <small>
            Period:
        </small>
        <select name="DatePeriodFilter" asp-for="CurrentDatePeriod" class="form-control form-control-sm small" asp-items="ViewBag.DataFilterValues"
                onchange="this.form.submit()"></select>

        <small> Page Size:</small>
        <select asp-for="PageSize" onchange="this.form.submit()" class="form-control form-control-sm small">
            <option value="3">3</option>
            <option value="5">5</option>
            <option value="10">10</option>
            <option value="20">20</option>
            <option value="100">100</option>
        </select>
        |
        <a class="small" asp-page="./Index"
           asp-route-sortOrder="@Model.CurrentSort"
           asp-route-pageIndex="@(Model.ListItems.CurrentPage)"
           asp-route-currentFilter="@Model.CurrentFilter"
           asp-route-datePeriodFilter="CURMONTH"
           asp-route-PageSize="@Model.PageSize">Back to full List</a>

    </p>

</form>
<table class="table table-bordered table-sm">
    <thead>
        <tr>
            <th class="small">
                <a asp-page="./Index"
                   asp-route-sortOrder="@Model.DateSort"
                   asp-route-searchFilter="@Model.CurrentFilter"
                   asp-route-datePeriodFilter="@Model.CurrentDatePeriod"
                   asp-route-PageSize="@Model.PageSize">
                    @Html.DisplayNameFor(model => model.ListItems[0].TransDate)
                </a>
                <i class="@Model.DateSortIcon"></i>
            </th>

            <th class="small">
                @Html.DisplayNameFor(model => model.ListItems[0].MaterialDocSeriesCode)
            </th>
            <th class="small">
                <a asp-page="./Index" asp-route-sortOrder="@Model.NameSort"
                   asp-route-searchFilter="@Model.CurrentFilter"
                   asp-route-datePeriodFilter="@Model.CurrentDatePeriod"
                   asp-route-PageSize="@Model.PageSize">
                    @Html.DisplayNameFor(model => model.ListItems[0].SupplierName)
                </a>
                <i class="@Model.NameSortIcon"></i>
            </th>

            <th class="small">
                @Html.DisplayNameFor(model => model.ListItems[0].TransRefCode)
            </th>
            <th class="small">
                @Html.DisplayNameFor(model => model.ListItems[0].TotalAmount)
            </th>
            <th class="small">
                @Html.DisplayNameFor(model => model.ListItems[0].CompanyCode)
            </th>
            <th class="small"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ListItems)
        {
            <tr>
              <td class="small">
                    @Html.DisplayFor(modelItem => item.TransDate)
                </td>
              <td class="small">
                    @Html.DisplayFor(modelItem => item.MaterialDocSeriesCode)
                </td>
              <td class="small">
                    @Html.DisplayFor(modelItem => item.SupplierName)
                </td>
              <td class="small">
                    @Html.DisplayFor(modelItem => item.TransRefCode)
                </td>
              <td class="small">
                    @Html.DisplayFor(modelItem => item.TotalAmount)
                </td>
              <td class="small">
                    @Html.DisplayFor(modelItem => item.CompanyCode)
                </td>

              <td class="small">
                    <a asp-page="./Edit" asp-route-id="@item.Id"><i class="fas fa-edit"></i></a> |
                    <a asp-page="./Details" asp-route-id="@item.Id"><i class="fas fa-info-circle"></i></a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
@{
    var prevDisabled = !Model.ListItems.HasPrevious ? "disabled" : "";
    var nextDisabled = !Model.ListItems.HasNext ? "disabled" : "";
}

<form class="form-inline" method="get">
   
    <a asp-page="./Index"
       asp-route-sortOrder="@Model.CurrentSort"
       asp-route-pageIndex="@(Model.ListItems.CurrentPage - 1)"
       asp-route-searchFilter="@Model.CurrentFilter"
       asp-route-datePeriodFilter="@Model.CurrentDatePeriod"
       asp-route-PageSize="@Model.PageSize"
       class="btn btn-light @prevDisabled">
        <
    </a>
    <small>
        Page:@Model.ListItems.CurrentPage of @Model.TotalPages Total Items @Model.TotalCount </small>
        <a asp-page="./Index"
           asp-route-sortOrder="@Model.CurrentSort"
           asp-route-pageIndex="@(Model.ListItems.CurrentPage + 1)"
           asp-route-searchFilter="@Model.CurrentFilter"
           asp-route-datePeriodFilter="@Model.CurrentDatePeriod"
           asp-route-PageSize="@Model.PageSize"
           class="btn btn-light @nextDisabled">
            >
        </a>

</form>
