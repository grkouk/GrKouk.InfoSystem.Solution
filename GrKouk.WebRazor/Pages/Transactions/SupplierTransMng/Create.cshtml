@model GrKouk.WebRazor.Pages.Transactions.SupplierTransMng.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Supplier Transaction</h4>
<hr />
<div class="container">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-row">
            <div class="form-group col-md-3">
                <label asp-for="SupplierTransactionDto.TransDate" class="control-label" ></label>
                <input  asp-for="SupplierTransactionDto.TransDate" class="form-control" value="2000-01-01"  />
                <span asp-validation-for="SupplierTransactionDto.TransDate" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="SupplierTransactionDto.TransSupplierDocSeriesId" class="control-label"></label>
                <select asp-for="SupplierTransactionDto.TransSupplierDocSeriesId" class="form-control" asp-items="ViewBag.TransSupplierDocSeriesId"></select>
            </div>

            <div class="form-group col-md-3">
                <label asp-for="SupplierTransactionDto.TransRefCode" class="control-label"></label>
                <input asp-for="SupplierTransactionDto.TransRefCode" class="form-control" />
                <span asp-validation-for="SupplierTransactionDto.TransRefCode" class="text-danger"></span>
            </div>

        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="SupplierTransactionDto.SupplierId" class="control-label"></label>
                <select asp-for="SupplierTransactionDto.SupplierId" class="form-control" asp-items="ViewBag.SupplierId"></select>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="SupplierTransactionDto.FiscalPeriodId" class="control-label"></label>
                <select asp-for="SupplierTransactionDto.FiscalPeriodId" class="form-control" asp-items="ViewBag.FiscalPeriodId"></select>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="SupplierTransactionDto.CompanyId" class="control-label"></label>
                <select asp-for="SupplierTransactionDto.CompanyId" class="form-control" asp-items="ViewBag.CompanyId"></select>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-5">
                <label asp-for="SupplierTransactionDto.FpaDefId" class="control-label"></label>
                <select asp-for="SupplierTransactionDto.FpaDefId" class="form-control" asp-items="ViewBag.FpaDefId"></select>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="SupplierTransactionDto.FpaRate" class="control-label"></label>
                <input asp-for="SupplierTransactionDto.FpaRate" class="form-control" />
                <span asp-validation-for="SupplierTransactionDto.FpaRate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label asp-for="SupplierTransactionDto.AmountFpa" class="control-label"></label>
                <input asp-for="SupplierTransactionDto.AmountFpa" class="form-control" onchange="FpaOnChange()"/>
                <span asp-validation-for="SupplierTransactionDto.AmountFpa" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="SupplierTransactionDto.AmountNet" class="control-label"></label>
                <input asp-for="SupplierTransactionDto.AmountNet" class="form-control" />
                <span asp-validation-for="SupplierTransactionDto.AmountNet" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="SupplierTransactionDto.AmountDiscount" class="control-label"></label>
                <input asp-for="SupplierTransactionDto.AmountDiscount" class="form-control" />
                <span asp-validation-for="SupplierTransactionDto.AmountDiscount" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-12">
                <label asp-for="SupplierTransactionDto.Etiology" class="control-label"></label>
                <textarea asp-for="SupplierTransactionDto.Etiology" class="form-control" placeholder="Αιτιολογία Κίνησης"> </textarea>
                <span asp-validation-for="SupplierTransactionDto.Etiology" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </form>
</div>

