@page
@model GrKouk.WebRazor.Pages.Expenses.EditModel

@{
    ViewData["Title"] = "Edit";
}
@System.Globalization.CultureInfo.CurrentCulture
@System.Globalization.CultureInfo.CurrentUICulture



<h2>Edit</h2>

<h4>Expense Transaction</h4>
<hr />
<div class="container">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="FinDiaryTransactionVM.Id" />
        <input type="hidden" asp-for="FinDiaryTransactionVM.Timestamp" />
        <input type="hidden" asp-for="FinDiaryTransactionVM.RevenueCentreId" />
        <div class="form-row">

            <div class="form-group col-md-4">
                <label asp-for="FinDiaryTransactionVM.TransactionDate"></label>
                <input asp-for="FinDiaryTransactionVM.TransactionDate" class="form-control form-control-sm" />
                <span asp-validation-for="FinDiaryTransactionVM.TransactionDate" class="text-danger"></span>
            </div>
            <div class="form-group col-md-8">
                <label asp-for="FinDiaryTransactionVM.TransactorId"></label>
                <select asp-for="FinDiaryTransactionVM.TransactorId" class="form-control form-control-sm" asp-items="ViewBag.TransactorId"></select>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label asp-for="FinDiaryTransactionVM.ReferenceCode"></label>
                <input asp-for="FinDiaryTransactionVM.ReferenceCode" class="form-control form-control-sm" />
                <span asp-validation-for="FinDiaryTransactionVM.ReferenceCode" class="text-danger"></span>
            </div>
            <div class="form-group col-md-8">
                <label asp-for="FinDiaryTransactionVM.FinTransCategoryId"></label>
                <select asp-for="FinDiaryTransactionVM.FinTransCategoryId" class="form-control form-control-sm" asp-items="ViewBag.FinTransCategoryId"></select>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="FinDiaryTransactionVM.CompanyId"></label>
                <select asp-for="FinDiaryTransactionVM.CompanyId" class="form-control form-control-sm" asp-items="ViewBag.CompanyId"></select>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="FinDiaryTransactionVM.CostCentreId"></label>
                <select asp-for="FinDiaryTransactionVM.CostCentreId" class="form-control form-control-sm" asp-items="ViewBag.CostCentreId"></select>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-12">
                <label asp-for="FinDiaryTransactionVM.Description"></label>
                @*<input asp-for="FinDiaryTransaction.Description" class="form-control" />*@
                <textarea asp-for="FinDiaryTransactionVM.Description" class="form-control form-control-sm" placeholder="Description of Transaction"></textarea>
                <span asp-validation-for="FinDiaryTransactionVM.Description" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="FinDiaryTransactionVM.AmountFpa"></label>
                <input asp-for="FinDiaryTransactionVM.AmountFpa" class="form-control form-control-sm" />
                <span asp-validation-for="FinDiaryTransactionVM.AmountFpa" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="FinDiaryTransactionVM.AmountNet"></label>
                <input asp-for="FinDiaryTransactionVM.AmountNet" class="form-control form-control-sm" />
                <span asp-validation-for="FinDiaryTransactionVM.AmountNet" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary btn-sm" />
            </div>
        </div>
    </form>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
