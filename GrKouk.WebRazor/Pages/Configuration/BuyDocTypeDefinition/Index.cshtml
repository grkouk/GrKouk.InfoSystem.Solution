@page
@model GrKouk.WebRazor.Pages.Configuration.IndexModel

@{
    ViewData["Title"] = "Buy Doc Type Definitions Index";
}

<h4>Buy Doc Type Index</h4>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table table-bordered table-sm">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BuyDocTypeDefs[0].Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BuyDocTypeDefs[0].Abbr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BuyDocTypeDefs[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BuyDocTypeDefs[0].Active)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BuyDocTypeDefs[0].TransSupplierDef)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BuyDocTypeDefs[0].TransWarehouseDef)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BuyDocTypeDefs[0].Company)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.BuyDocTypeDefs) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Abbr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Active)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TransSupplierDef.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TransWarehouseDef.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Company.Code)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
