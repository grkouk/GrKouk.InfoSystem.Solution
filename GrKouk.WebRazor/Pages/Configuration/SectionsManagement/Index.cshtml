@page
@model GrKouk.WebRazor.Pages.Configuration.SectionsManagement.IndexModel

@{
    ViewData["Title"] = "Sections List";
}

<h2>Sections List</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table table-bordered table-sm">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Section[0].Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Section[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Section[0].SystemName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Section) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SystemName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
