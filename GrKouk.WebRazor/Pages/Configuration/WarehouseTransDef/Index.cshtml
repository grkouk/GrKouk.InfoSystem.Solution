@page
@model GrKouk.WebRazor.Pages.Configuration.WarehouseTransDef.IndexModel

@{
    ViewData["Title"] = "Warehouse Trans Denifitions Index";
}

<h4>Warehouse Trans Denifitions Index</h4>

<p>
    <small>
        <a asp-page="Create">Create New</a>
    </small>
</p>
<table class="table table-bordered table-sm">
    <thead class="thead-light">
        <tr>
            <th class="small">
                @Html.DisplayNameFor(model => model.ListItemsDtos[0].Code)
            </th>
            <th class="small">
                @Html.DisplayNameFor(model => model.ListItemsDtos[0].Name)
            </th>
            <th class="small">
                @Html.DisplayNameFor(model => model.ListItemsDtos[0].Active)
            </th>
           
            <th class="small">
                @Html.DisplayNameFor(model => model.ListItemsDtos[0].CompanyName)
            </th>
            <th class="small"></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ListItemsDtos) {
        <tr>
            <td class="small">
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td class="small">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td class="small">
                @Html.DisplayFor(modelItem => item.Active)
            </td>
            
            <td class="small">
                @Html.DisplayFor(modelItem => item.CompanyName)
            </td>
            <td class="small">
                <a asp-page="./Edit" asp-route-id="@item.Id"><i class="fas fa-edit"></i></a> |
                <a asp-page="./Details" asp-route-id="@item.Id"><i class="fas fa-info-circle"></i></a> |
                <a asp-page="./Delete" asp-route-id="@item.Id"><i class="fas fa-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
