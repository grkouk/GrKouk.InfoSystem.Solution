            @Html.DisplayFor(modelItem => item.TransactorId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CodeUsedUnit)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {materialId = item.MaterialId, codeType = item.CodeType, code = item.Code}) |
            @Html.ActionLink("Details", "Details", new {materialId = item.MaterialId, codeType = item.CodeType, code = item.Code}) |
