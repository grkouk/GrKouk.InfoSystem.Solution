<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MaterialCode[0].Material)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaterialCode[0].CodeType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaterialCode[0].Code)
