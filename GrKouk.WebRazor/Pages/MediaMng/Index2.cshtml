@page
@model GrKouk.WebRazor.Pages.MediaMng.IndexModel2

@{
    ViewData["Title"] = "Index";
}

<h4>List of Media</h4>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MediaEntry[0].MediaFile)
            </th>
            <th>
                Picture
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.MediaEntry) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MediaFile)
            </td>
            <td>
                <img src="@item.Url" style="height:50px;width:50px;"/>
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
